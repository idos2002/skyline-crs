{
  "preset": "@shelf/jest-mongodb",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": [
    "<rootDir>/jest-setup.ts"
  ],
  "watchPathIgnorePatterns": [
    "globalConfig.json"
  ]
}

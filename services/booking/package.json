{
  "name": "booking",
  "version": "1.0.0",
  "description": "This is the booking service for Skyline CRS. It is responsible for managing the flight booking process.",
  "author": "Ido Saban <sabanido.business@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "clean": "rimraf dist docs",
    "clean:build": "rimraf dist",
    "clean:docs": "rimraf docs",
    "clean:all": "rimraf dist node_modules",
    "docs": "typedoc --out docs src",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main\"",
    "start:prod": "node -r module-alias/register dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.6.2",
    "amqplib": "^0.8.0",
    "autobind-decorator": "^2.4.0",
    "bunyan": "^1.8.15",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.13.2",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "flat": "^5.0.2",
    "graphql": "^16.3.0",
    "graphql-request": "^4.0.0",
    "http-status-codes": "^2.2.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.2.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "uuid": "^8.3.2",
    "uuid-mongodb": "^2.5.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.8.2",
    "@types/bunyan": "^1.8.8",
    "@types/express": "^4.17.13",
    "@types/flat": "^5.0.2",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.5.1",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "^3.12.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  },
  "_moduleAliases": {
    "@auth": "dist/auth",
    "@booking": "dist/booking",
    "@common": "dist/common",
    "@config": "dist/config",
    "@email": "dist/email",
    "@flights": "dist/flights",
    "@ticket": "dist/ticket"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@(auth|booking|common|config|email|flights|ticket)/(.*)": "<rootDir>/$1/$2",
      "@(auth|booking|common|config|email|flights|ticket)": "<rootDir>/$1"
    },
    "setupFiles": [
      "<rootDir>/jest-setup.ts"
    ]
  }
}
